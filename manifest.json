{
	"manifest_version": 3,
	"name": "Chesstention",
	"description":  "Chesstention: play chess locally, vs computer, or with friends on LAN. Clean UI, themes, and the best way to rizz and aura farm over the board. Chess pieces by Cburnett/jurgenwesterhof (CC BY-SA 3.0).",
	"version": "1.0",
	"action": {
	  "default_popup": "popup.html",
	  "default_icon": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	  }
	},
	"icons": {
	  "16": "images/icon16.png",
	  "48": "images/icon48.png",
	  "128": "images/icon128.png"
	},
	"permissions": [
	  "storage"
	],
	"host_permissions": [
	  "https://web-production-e734b.up.railway.app/*"
	],
	"web_accessible_resources": [
	  {
		"resources": ["images/*", "media/*"],
		"matches": ["<all_urls>"]
	  }
	]
}
  