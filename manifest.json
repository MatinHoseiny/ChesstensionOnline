{
	"manifest_version": 3,
	"name": "Chesstention",
	"version": "1.0.0",
	"version_name": "1.0.0",
	"description": "Join the chesstension team. Play chess and compete with friends online or challenge AI opponents. Level up your game and dominate the board.",
	"author": "Matin Hosseini",
	"action": {
	  "default_popup": "popup.html",
	  "default_icon": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	  }
	},
	"icons": {
	  "16": "images/icon16.png",
	  "48": "images/icon48.png",
	  "128": "images/icon128.png"
	},
	"permissions": [
	  "storage"
	],
	"host_permissions": [
	  "https://web-production-e734b.up.railway.app/*",
	  "https://lichess.org/*"
	],
	"web_accessible_resources": [
	  {
		"resources": ["images/*", "media/*"],
		"matches": ["<all_urls>"]
	  }
	]
}
  